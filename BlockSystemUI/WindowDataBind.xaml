<Window x:Class="BlockSystemUI.WindowDataBind"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlockSystemUI"
        mc:Ignorable="d"
        Title="WindowDataBind" Height="450" Width="800">
    <Window.Resources>
        <local:BoolToTextConverter x:Key="BoolToTextConverter"/>
    </Window.Resources>
    <Grid>
        <Label Content="{Binding IsSpecial, Converter={StaticResource BoolToTextConverter}}" 
               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <Button Content="Click Me" HorizontalAlignment="Center" VerticalAlignment="Center" 
                Command="{Binding ToggleCommand}"/>
    </Grid>
</Window>
