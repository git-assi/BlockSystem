        <fa:ImageAwesome Grid.Row="5" Grid.Column="4"  Icon="Solid_GripLinesVertical" Rotation="90"/>
        <StackPanel Grid.Row="8" Grid.Column="2" Orientation="Vertical">
            <Label>Test</Label>
            <fa:ImageAwesome Icon="Solid_GripLinesVertical" Rotation="90" Width="20" Height="50"/>
